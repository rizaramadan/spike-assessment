@model Assessment.Models.AppUser

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <main role="main" class="pb-3">

        <h2>Delete @Model.UserName</h2>

        <div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item"><a class="nav-link " asp-action="Create">Create New</a></li>
                        <li class="nav-item"><a class="nav-link " asp-action="Index">List</a></li>
                        <li class="nav-item"><a class="nav-link " asp-action="Edit" asp-route-id="@Model.Id">Edit</a></li>
                        <li class="nav-item"><a class="nav-link " asp-action="Details" asp-route-id="@Model.Id">Details</a></li>
                        <li class="nav-item"><a class="nav-link active bg-danger" href="#">Delete</a></li>
                    </ul>

                </div>
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-12">
                            @Html.DisplayNameFor(model => model.NRG)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.DisplayFor(model => model.NRG)
                        </dd>
                        <dt class="col-sm-12">
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt class="col-sm-12">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-12">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete? no way to undo" class="btn btn-danger" /> 
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

    
