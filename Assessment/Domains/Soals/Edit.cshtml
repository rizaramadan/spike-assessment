@model Assessment.Domains.PaketSoals.Soal

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <main role="main" class="pb-3">
        <h2>Manage Soal</h2>
        <div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item"><a class="nav-link " asp-action="create">Create New</a></li>
                        <li class="nav-item"><a class="nav-link " asp-action="Index">List</a></li>
                        <li class="nav-item"><a class="nav-link active"  href="#">Edit @Model.Name </a></li>
                        <li class="nav-item"><a class="nav-link " asp-action="Details" asp-route-id="@Model.Id" >Details @Model.Name </a></li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-4">
                             <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="PaketSoalId" class="control-label"></label>
                                        <select asp-for="PaketSoalId" class="form-control" asp-items="ViewBag.PaketSoalId"></select>
                                        <span asp-validation-for="PaketSoalId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Pertanyaan" class="control-label"></label>
                                        <input asp-for="Pertanyaan" class="form-control" />
                                        <span asp-validation-for="Pertanyaan" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Tipe" class="control-label"></label>
                                        <select asp-for="Tipe" class="form-control"></select>
                                        <span asp-validation-for="Tipe" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="No" class="control-label"></label>
                                        <input asp-for="No" class="form-control" />
                                        <span asp-validation-for="No" class="text-danger"></span>
                                    </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </main>
</div>
            

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
