@model string
@{
    DateTime date = (DateTime)ViewData["date"];
    var prevDate = date.AddDays(-1).Date;
    var nextDate = date.AddDays(1).Date;
}


<div class="p-2 bd-highlight"> <a role="button" class="btn btn-outline-primary" asp-area="" asp-controller="Timesheets" asp-action="@Model" asp-route-day="@prevDate"> Go to Previous Day </a></div>
<div class="p-2 bd-highlight"><h3>Manage Timesheet @date.Day - @date.Month - @date.Year  </h3></div>
<div class="p-2 bd-highlight"> <a role="button" class="btn btn-outline-primary" asp-area="" asp-controller="Timesheets" asp-action="@Model" asp-route-day="@nextDate"> Go to Next Day </a></div>
